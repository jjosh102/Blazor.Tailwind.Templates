{
  "$schema": "http://json.schemastore.org/template",
  "author": "Obaki102",
  "classifications": [
    "Blazor",
    "Web",
    "Wasm",
    "Tailwind"
  ],
  "name": "Blazor Tailwind Templates",
  "description": "Blazor template using Tailwind CSS",
  "identity": "Blazor.Tailwind.Templates",
  "groupIdentity": "Blazor.Tailwind.Templates",
  "shortName": "blazortailwind",
  "defaultName": "BlazorTailwindTemplates",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "BlazorTailwindApp",
  "preferNameDirectory": false,
  "symbols": {
    "Interactivity": {
      "type": "parameter",
      "datatype": "choice",
      "description": "The target host for the Blazor app.",
      "defaultValue": "wasm",
      "choices": [
        {
          "choice": "wasm",
          "description": "Runs in the browser using WebAssembly"
        },
        {
          "choice": "auto",
          "description": "Blazor Auto Interactivity"
        },
        {
          "choice": "server",
          "description": "Uses Server while downloading WebAssembly assets, then uses WebAssembly"
        },
        {
          "choice": "none",
          "description": "No interactivity (static server rendering only)"
        }
      ]
    },
    "IsHostWasm": {
      "type": "computed",
      "value": "(Interactivity == \"wasm\")"
    },
    "IsHostAuto": {
      "type": "computed",
      "value": "(Interactivity == \"auto\")"
    },
    "IsHostServer": {
      "type": "computed",
      "value": "(Interactivity == \"server\")"
    },
    "IsHostNone": {
      "type": "computed",
      "value": "(Interactivity == \"none\")"
    },
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "displayName": ".NET 8",
          "description": "Target .NET 8 only",
          "choice": "net8.0"
        },
        {
          "displayName": ".NET 9",
          "description": "Target .NET 9 only",
          "choice": "net9.0"
        },
        {
          "displayName": ".NET 8 and .NET 9",
          "description": "Target both .NET 8 and .NET 9",
          "choice": "net8.0;net9.0"
        }
      ],
      "defaultValue": "net8.0",
      "replaces": "{TargetFramework}",
      "condition": "(Interactivity == \"wasm\")"
    },
    "IsMultiTarget": {
      "type": "computed",
      "value": "(Framework == \"net8.0;net9.0\")"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "ExcludeLaunchSettings": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Exclude launchSettings.json from the generated template."
    }
  },
  "primaryOutputs": [
    {
      "path": "./"
    }
  ],
  "sources": [
    {
      "condition": "(IsHostAuto)",
      "source": "./.template.base/auto",
      "target": "./",
      "include": [
        "**/*"
      ],
      "exclude": [
        "**/bin/**",
        "**/obj/**"
      ],
      "copyOnly": []
    },
    {
      "condition": "(IsHostServer)",
      "source": "./.template.base/server",
      "target": "./",
      "include": [
        "**/*"
      ],
      "exclude": [
        "**/bin/**",
        "**/obj/**"
      ],
      "copyOnly": []
    },
    {
      "source": "./.template.base/root",
      "target": "./",
      "include": [
        "**/*"
      ],
      "copyOnly": []
    },
    {
      "condition": "(!IsHostWasm)",
      "source": "./.template.base/wwwroot",
      "target": "./wwwroot",
      "include": [
        "**/*"
      ],
      "exclude": [
        "index.html"
      ],
      "copyOnly": []
    },
    {
      "condition": "(IsHostWasm)",
      "source": "./.template.base/wwwroot",
      "target": "./wwwroot",
      "include": [
        "**/*"
      ],
      "copyOnly": []
    },
    {
      "condition": "(!IsHostWasm)",
      "source": "./.template.base/components",
      "target": "./Components",
      "include": [
        "**/*"
      ],
      "copyOnly": []
    },
    {
      "condition": "(IsHostWasm)",
      "source": "./.template.base/components",
      "target": "./Components",
      "include": [
        "**/*"
      ],
      "exclude": [
        "Routes.razor"
      ],
      "copyOnly": []
    },
    {
      "condition": "(ExcludeLaunchSettings)",
      "exclude": [
        "/.template.base/root/Properties/launchSettings.json"
      ]
    }
  ],
  "SpecialCustomOperations": {
    "**/*.razor": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "//#if"
            ],
            "else": [
              "//#else"
            ],
            "elseif": [
              "//#elseif"
            ],
            "endif": [
              "//#endif"
            ],
            "trim": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    },
    "**/*.html": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "//#if"
            ],
            "else": [
              "//#else"
            ],
            "elseif": [
              "//#elseif"
            ],
            "endif": [
              "//#endif"
            ],
            "trim": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    }
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "condition": "(Interactivity != \"wasm\")",
      "description": "Framework selection is only applicable when the Interactivity is 'wasm'.",
      "manualInstructions": [
        {
          "text": "Note: The 'Framework' option is only relevant when 'Interactivity' is set to 'wasm'. Other hosts will not use this option.The feature is currently under development and will be available soon."
        }
      ],
      "actionId": "F2A71F9B-5D33-465A-A702-920D77279786",
      "continueOnError": true
    }
  ]
}