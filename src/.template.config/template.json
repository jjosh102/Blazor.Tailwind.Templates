{
  "$schema": "http://json.schemastore.org/template",
  "author": "Obaki102",
  "classifications": [
    "Blazor",
    "Web",
    "Wasm",
    "Tailwind"
  ],
  "name": "Blazor Tailwind Templates",
  "description": "Blazor template using Tailwind CSS",
  "identity": "Blazor.Tailwind.Templates",
  "groupIdentity": "Blazor.Tailwind.Templates",
  "shortName": "blazortailwind",
  "defaultName": "BlazorTailwindTemplates",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "BlazorTailwindApp",
  "preferNameDirectory": false,
  "symbols": {
    "Host": {
      "type": "parameter",
      "datatype": "choice",
      "description": "The target host for the blazor app.",
      "defaultValue": "wasm",
      "choices": [
        {
          "choice": "wasm",
          "description": "Blazor WebAssembly"
        }
      ]
    },
    "IsWasm": {
      "type": "computed",
      "value": "(Host == \"wasm\")"
    },
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "displayName": ".NET 8",
          "description": "Target .NET 8 only",
          "choice": "net8.0"
        },
        {
          "displayName": ".NET 9",
          "description": "Target .NET 9 only",
          "choice": "net9.0"
        },
        {
          "displayName": ".NET 8 and .NET 9",
          "description": "Target both .NET 8 and .NET 9",
          "choice": "net8.0;net9.0"
        }
      ],
      "defaultValue": "net8.0",
      "replaces": "{TargetFramework}"
    },
    "IsMultiTarget": {
      "type": "computed",
      "value": "(Framework == \"net8.0;net9.0\")"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "primaryOutputs": [
    {
      "path": "./"
    }
  ],
  "sources": [
    {
      "source": "./.template.base/wasm",
      "target": "./",
      "include": ["**/*"],
      "exclude": ["**/bin/**", "**/obj/**"],
      "copyOnly": []
    },
    {
      "condition": "(IsWasm)",
      "source": "./.template.base/wasm",
      "target": "./",
      "include": ["**/*"],
      "exclude": ["**/bin/**", "**/obj/**"],
      "copyOnly": []
    }
  ],
  "SpecialCustomOperations": {
    "**/*.razor": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "//#if"
            ],
            "else": [
              "//#else"
            ],
            "elseif": [
              "//#elseif"
            ],
            "endif": [
              "//#endif"
            ],
            "trim": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    },
    "**/*.html": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "//#if"
            ],
            "else": [
              "//#else"
            ],
            "elseif": [
              "//#elseif"
            ],
            "endif": [
              "//#endif"
            ],
            "trim": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    }
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}